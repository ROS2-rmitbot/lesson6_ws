<?xml version="1.0"?>
<sdf version="1.10">
  <world name="room_world">
    <!-- Scene tone + shadows (like empty.world) -->
    <scene>
      <ambient>0.4 0.4 0.4 1</ambient>
      <background>0.7 0.7 0.7 1</background>
      <shadows>true</shadows>
    </scene>

    <light name="sun" type="directional">
      <cast_shadows>true</cast_shadows>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <direction>-0.5 0.5 -1</direction>
      <attenuation>
        <range>200</range>
        <constant>1.0</constant>
        <linear>0.0</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
    </light>

    <!-- Simple floor: no Fuel dependency -->
    <model name="floor">
      <static>true</static>
      <link name="floor_link">
        <collision name="col">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>50 50</size>
            </plane>
          </geometry>
          <surface>
            <contact />
            <friction />
          </surface>
        </collision>
        <visual name="vis">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>50 50</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- 8x8 m room walls -->
    <model name="room_8x8">
      <static>true</static>

      <link name="wall_north">
        <pose>0 4 1.25 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box>
              <size>8 0.1 2.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box>
              <size>8 0.1 2.5</size>
            </box>
          </geometry>
          <material>
            <ambient>0.68 0.85 0.9 1</ambient>
            <diffuse>0.68 0.85 0.9 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
          </material>
        </visual>
      </link>

      <link name="wall_south">
        <pose>0 -4 1.25 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box>
              <size>8 0.1 2.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box>
              <size>8 0.1 2.5</size>
            </box>
          </geometry>
          <material>
            <ambient>0.68 0.85 0.9 1</ambient>
            <diffuse>0.68 0.85 0.9 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
          </material>
        </visual>
      </link>

      <link name="wall_east">
        <pose>4 0 1.25 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box>
              <size>0.1 8 2.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box>
              <size>0.1 8 2.5</size>
            </box>
          </geometry>
          <material>
            <ambient>0.68 0.85 0.9 1</ambient>
            <diffuse>0.68 0.85 0.9 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
          </material>
        </visual>
      </link>

      <link name="wall_west">
        <pose>-4 0 1.25 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box>
              <size>0.1 8 2.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box>
              <size>0.1 8 2.5</size>
            </box>
          </geometry>
          <material>
            <ambient>0.68 0.85 0.9 1</ambient>
            <diffuse>0.68 0.85 0.9 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
          </material>
        </visual>
      </link>
    </model>
  </world>
</sdf>